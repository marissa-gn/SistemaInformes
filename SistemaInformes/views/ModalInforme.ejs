<!-- Modal para ver informe -->
<div class="modal fade" id="modalInforme" tabindex="-1" aria-labelledby="modalInformeLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalInformeLabel"><b>INFORME</b></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row mb-2">
            <div class="col-md-4 mb-2">
              <label for="nombre" class="form-label"><b>Nombre de quien envía:</b></label>
              <input type="text" class="form-control" id="nombre">
            </div>
            <div class="col-md-4 mb-2">
              <label for="fecha" class="form-label"><b>Fecha de envío:</b></label>
              <input type="text" class="form-control" id="fecha">
            </div>
            <div class="col-md-4 mb-2">
              <label for="area" class="form-label"><b>Área:</b></label>
              <input type="text" class="form-control" id="area">
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-md-4 mb-2">
              <label for="colonia" class="form-label"><b>Colonia o comunidad:</b></label>
              <input type="text" class="form-control" id="colonia">
            </div>
            <div class="col-md-4 mb-2">
              <label for="lugar" class="form-label"><b>Lugar de actividad:</b></label>
              <input type="text" class="form-control" id="lugar">
            </div>
            <div class="col-md-4 mb-2">
              <label for="sector" class="form-label"><b>Sector al que beneficia:</b></label>
              <input type="text" class="form-control" id="sector">
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-md-4 mb-2">
              <label for="tipo" class="form-label"><b>Tipo de actividad / unidad de medida:</b></label>
              <input type="text" class="form-control" id="tipo">
            </div>
            <div class="col-md-4 mb-2">
              <label for="beneficiarios" class="form-label"><b>Número de beneficiarios:</b></label>
              <input type="text" class="form-control" id="beneficiarios">
            </div>
            <div class="col-md-4 mb-2">
              <label for="monto" class="form-label"><b>Monto generado por la actividad (si aplica):</b></label>
              <input type="text" class="form-control" id="monto">
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-md-4 mb-2">
              <label for="solicitudCiudadania" class="form-label"><b>¿Responde a una solicitud de la ciudadanía?</b></label>
              <select class="form-select" id="solicitudCiudadania">
                <option value="">Selecciona...</option>
                <option value="si">Sí</option>
                <option value="no">No</option>
              </select>
            </div>
            <div class="col-md-4 mb-2">
              <label for="procedimientosArea" class="form-label"><b>¿Pertenece la actividad a los procedimientos de su área?</b></label>
              <select class="form-select" id="procedimientosArea">
                <option value="">Selecciona...</option>
                <option value="si">Sí</option>
                <option value="no">No</option>
              </select>
            </div>
            <div class="col-md-4 mb-2">
              <label for="evidencia" class="form-label"><b>Evidencia fotográfica:</b></label>
              <input class="form-control" type="file" id="evidencia" accept="image/*">
            </div>
          </div>
          <div class="mb-2">
            <label for="descripcion" class="form-label"><b>Descripción de la actividad:</b></label>
            <input type="text" class="form-control" id="descripcion">
          </div>
          <div class="mb-2">
            <label for="comentario" class="form-label"><b>Comentario:</b></label>
            <input type="text" class="form-control" id="comentario">
          </div>
          <div class="mb-2 d-flex gap-2 align-items-center">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="evaluacion" id="rechazar">
              <label class="form-check-label" for="rechazar"><b>Rechazar</b></label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="evaluacion" id="aceptar">
              <label class="form-check-label" for="aceptar"><b>Aprobar</b></label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" id="btnAceptarInforme">Aceptar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>
      </div>
    </div>
  </div>

  <!-- Toast de informe revisado -->
  <div class="toast align-items-center shadow border-0" id="toastInformeRevisado" role="alert" aria-live="assertive" aria-atomic="true"
    style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 9999; display: none; min-width: 300px; background: #f5f5c2; color: #7c2323; border-radius: 10px; font-size: 1.2rem; font-weight: 500;">
    <div class="d-flex">
      <div class="toast-body">
        <i class="bi bi-check-circle-fill me-2" style="color: #28a745;"></i>
        Informe revisado.
      </div>
      <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>

  <script>
  document.addEventListener('DOMContentLoaded', function() {
    var btnAceptar = document.getElementById('btnAceptarInforme');
    var modal = document.getElementById('modalInforme');
    var toast = document.getElementById('toastInformeRevisado');
    var bsModal = bootstrap.Modal.getOrCreateInstance(modal);
    var bsToast = bootstrap.Toast.getOrCreateInstance(toast);

    btnAceptar.addEventListener('click', function() {
      bsModal.hide();
      toast.style.display = 'block';
      bsToast.show();
    });

    toast.addEventListener('hidden.bs.toast', function () {
      toast.style.display = 'none';
    });
  });
  </script>
      </div>
    </div>
  </div>
</div>
